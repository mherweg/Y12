<!-- crew -->
	<model>
		<name>pilot</name>
		<path>Aircraft/Y12/Models/pilot.xml</path>
		<nopreview/>
		<offsets> 
			<x-m>-7.0</x-m>
			<y-m>0.5</y-m>
